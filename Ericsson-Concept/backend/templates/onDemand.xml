                        <lockup prototype="artwork" binding="@onselect:{onselect};">
                            <img binding="@src:{url};" width="200" height="300"/>
                            <title style="font-weight:light;" binding="textContent:{title};" />
                        </lockup>
                    </prototypes>
                </section>
            </shelf>
        </collectionList>
    </stackTemplate>
</document>

